// Classe para representar um livro
class Livro {
    String titulo;
    String autor;
    int anoPublicacao;

    public Livro(String titulo, String autor, int anoPublicacao) {
        this.titulo = titulo;
        this.autor = autor;
        this.anoPublicacao = anoPublicacao;
    }
}

// Classe para representar um nó na lista encadeada
class No {
    Livro livro;
    No proximo;

    public No(Livro livro) {
        this.livro = livro;
        this.proximo = null;
    }
}

// Classe para representar a lista encadeada de livros
class ListaEncadeada {
    private No primeiro;

    public ListaEncadeada() {
        this.primeiro = null;
    }

    // Método para adicionar um livro à lista
    public void adicionarLivro(Livro livro) {
        No novoNo = new No(livro);
        if (primeiro == null) {
            primeiro = novoNo;
        } else {
            No atual = primeiro;
            while (atual.proximo != null) {
                atual = atual.proximo;
            }
            atual.proximo = novoNo;
        }
    }

    // Método para imprimir todos os livros na lista
    public void imprimirLivros() {
        No atual = primeiro;
        while (atual != null) {
            System.out.println("Título: " + atual.livro.titulo);
            System.out.println("Autor: " + atual.livro.autor);
            System.out.println("Ano de Publicação: " + atual.livro.anoPublicacao);
            System.out.println("-----------------------------");
            atual = atual.proximo;
        }
    }
}

// Classe principal para testar a lista encadeada
public class Main {
    public static void main(String[] args) {
        ListaEncadeada listaLivros = new ListaEncadeada();

        // Adicionando alguns livros à lista
        listaLivros.adicionarLivro(new Livro("Dom Quixote", "Miguel de Cervantes", 1605));
        listaLivros.adicionarLivro(new Livro("1984", "George Orwell", 1949));
        listaLivros.adicionarLivro(new Livro("O Pequeno Príncipe", "Antoine de Saint-Exupéry", 1943));

        // Imprimindo todos os livros na lista
        listaLivros.imprimirLivros();
    }
}
